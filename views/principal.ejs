<script>
    let fotos = [
        "https://ciconceptstore.com/cdn/shop/products/2.png?v=1676113066&width=1000",
        "https://cdn.shopify.com/s/files/1/2358/2817/products/air-force-1-low-orange-skeleton-halloween-2020-954961.png?v=1638812427",
        "https://www.truetosole.hu/cdn/shop/products/True-to-Sole-Nike-Air-Force-1-Low-Experimental-Halloween-DC8904-001-02_1000x600.png?v=1634918101",
        "https://www.soleretriever.com/_next/image?url=https%3A%2F%2Fwnqjelklwcclokznfoyh.supabase.co%2Fstorage%2Fv1%2Fobject%2Fpublic%2Fproducts%2FDV7164_001_A_PREM-1697486276958.png&w=1200&q=75",
        "https://aplug.pl/cdn/shop/products/nike-air-force-1-mid-sp-off-white-varsity-maize3.png?v=1701243817&width=1445"
    ]

    var cont = 0

    function gif(){
        
        if ( cont < 4){
            document.getElementById("gif2").src=fotos[cont]
        }
        else{
            document.getElementById("gif2").src=fotos[cont]
            cont = cont - 5
        }
        cont++
    }

    function tiempo(){
        setInterval(gif, 2000)
    }
    window.onload = tiempo
    


    function ir(){
        window.location = "/vistazapas/:id"
    }

</script>